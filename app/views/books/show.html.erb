<h3> <%= @book.isbn %> : <%= @book.name %> </h3>

<hr/>

<div style="display: flex;">
  <image src=<%=@book.image_url%> alt=<%=@book.name%> />

  <div style="padding-left: 30px">
    <p style="margin-bottom: 20px"> Description </p>
    <p> <%= @book.description %> </p>
    <p>
      <small> written By : <%= p.user.name %></small>
    </p>
  </div>

</div>

<ul>
    <li>
      <%= link_to "Edit", edit_book_path(@book) %>
    </li>
    <li>
      <%= link_to "Destroy", book_path(@book), data:{
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
      } %>
    </li>
</ul>

<%= link_to "back home", books_path %>
